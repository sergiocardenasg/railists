<%= form_for @playlist do |f| %>

    <% if @playlist.errors.any? %>
        <div id="error_explanation">
            <h2>
            <%= pluralize(@playlist.errors.count, "error") %> encountered:
            </h2>

            <ol>
            <% @playlist.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ol>
        </div>
    <% end %>

   <div class="form-group <%= 'field_with_errors' if @playlist.errors[:name].any? %>">
    <%= f.label "Name"%>
        <br />
    <%= f.text_field :name %>
  </div>

    <%= f.submit class: "btn btn-primary" %>

<% end %>