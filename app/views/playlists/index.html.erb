<h1><%= current_user.username.capitalize%>'s Playlists</h1>
<% if flash[:notice] %>
  <div class="center alert">
    <p><%= flash[:notice] %></p>
  </div>
<% end %>
<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><strong>Name</strong></td>
    <td><strong>Date Created</strong></td>
    <td><strong>Edit</strong></td>
    <td><strong>Delete</strong></td>
  </tr>
  <% @playlists.each do |playlist| %>
    <tr>
      <td><%= link_to playlist.name, playlist_path(playlist) %></td>
      <td><%= playlist.created_at.strftime("%D") %></td>
      <td><%= link_to "Edit playlist", edit_playlist_path(playlist) %></td>
      <td><%= link_to "Delete playlist", playlist_path(playlist), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<p><%= link_to 'New Playlist', new_playlist_path %></p>
<p><%= link_to 'Add Songs to a Playlist', new_playlist_song_path %></p>

