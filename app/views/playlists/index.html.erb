<h1><%= current_user.username%>'s Playlists</h1>
<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><strong>Name</strong></td>
    <td><strong>Date Created</strong></td>
    <td><strong>Details</strong></td>
  </tr>
  <% @playlists.each do |playlist| %>
    <tr>
      <td><%= playlist.name %></td>
      <td><%= playlist.created_at %></td>
      <td><%= link_to "Go on #{playlist.name}", playlist_path(playlist) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>
<p><%= link_to 'New Playlist', new_playlist_path %></p>
