<h1><%= @playlist.name%></h1>
<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><strong>Title</strong></td>
    <td><strong>Artist</strong></td>
    <td><strong>Genre</strong></td>
    <td><strong>Delete</strong></td>
  </tr>
  <% if @playlist.songs.empty?%>
    <tr>
          <strong>Your playlist is empty! Add songs using the link below:</strong>
    </tr>
  <% else %>
    <% @playlist.playlist_songs.each do |playlist_song| %>
      <tr>
        <td><%= link_to playlist_song.song.title, song_path(playlist_song.song) %></td>
        <td><%= link_to playlist_song.song.artist.name, artist_path(playlist_song.song.artist) %></td>
        <td><%= link_to playlist_song.song.genre.name, genre_path(playlist_song.song.genre) %></td>
        <td><%= link_to "Delete song from playlist", playlist_song_path(playlist_song), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
<p><%= link_to "Add Songs to the Playlist", new_playlist_song_path(@playlist) %></p>
