<h1>All Songs</h1>
<table class="table">
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><strong>Title</strong></td>
    <td><strong>Artist</strong></td>
    <td><strong>Genre</strong></td>
    <td><strong>Edit</strong></td>
    <td><strong>Delete</strong></td>
  </tr>
  <% @songs.each do |song| %>
    <tr>
      <td><%= link_to song.title, song_path(song) %></td>
      <td><%= link_to song.artist.name, artist_path(song.artist) %></td>
      <td><%= link_to song.genre.name, genre_path(song.genre) %></td>
      <td><%= link_to "Edit song", edit_song_path(song) %></td>
      <td><%= link_to "Delete song", song_path(song), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<p><%= link_to "Add New Song", new_song_path %></p>
