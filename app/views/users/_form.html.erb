<%= form_for @user, url: "/signup", method: "post" do |f| %>

    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2>
            <%= pluralize(@user.errors.count, "error") %> encountered:
            </h2>

            <ol>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ol>
        </div>
    <% end %>

    <div class="form-group <%= 'field_with_errors' if @user.errors[:email].any? %>">
        <%= f.label :email %>
        <br>
        <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group <%= 'field_with_errors' if @user.errors[:username].any? %>">
        <%= f.label :username %>
        <br>
        <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group <%= 'field_with_errors' if @user.errors[:password].any? %>">
        <%= f.label :password %>
        <br>
        <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
    </div>

<% end %>